_G.script2Done = true
_G.Event = true

spawn(function()
loadstring(game:HttpGet("https://raw.githubusercontent.com/dracular111/03/main/Del-TopBarApp"))()
end)

spawn(function()
wait(68)
loadstring(game:HttpGet("https://raw.githubusercontent.com/dracular111/03/main/Noti-Default"))()
end)

spawn(function()
wait(68)
loadstring(game:HttpGet("https://raw.githubusercontent.com/dracular111/03/main/Noti-Updater2"))()
end)

spawn(function()
    local eventId = game.PlaceId
    if eventId == 119454325063278 then
        -- Farming world event
        getgenv().GDO_FARMING_WORLD = true
        getgenv().GEVENT_UPGRADES = {
            "FarmingHugeChance",
            "FarmingTitanicChance",
            "FarmingPixelRainbowLuck",
            "FarmingGoldHatchChance",
            "FarmingRainbowHatchChance",
            "FarmingShinyHatchChance"
        }
		getgenv().GENCHANTS = {"Lucky Eggs","Lucky Eggs","Lucky Eggs","Huge Hunter","Treasure Hunter","Diamonds"}
        print("✅ Config: Farming world set")

    elseif eventId == 95635359880599 then
        -- Fishing event
        getgenv().GDO_FISHING_EVENT = true
        getgenv().GUSE_BOOSTS = true
		getgenv().GENCHANTS = {"Lucky Eggs","Lucky Eggs","Lucky Eggs","Huge Hunter","Treasure Hunter","Diamonds"}
        print("✅ Config: Fishing event set")

    elseif eventId == 140403681187145 then
        -- World 4: check _G.Time_Trial_End một lần
        if _G.Time_Trial_End == true then
			getgenv().GENCHANTS = {"Criticals","Tap Power","Lucky Eggs","Huge Hunter","Treasure Hunter","Diamonds"}
			spawn(function()
        	loadstring(game:HttpGet("https://raw.githubusercontent.com/dracular111/03/main/Event-TimeTrial-3"))()
			end)
            print("✅ Config: Halloween set (Time_Trial_End)")
        else
            warn("⛔ _G.Time_Trial_End chưa true — set Block Party.")
			getgenv().GENCHANTS = {"Criticals","Criticals","Tap Power","Tap Power","Strong Pets","Strong Pets"}
			spawn(function()
			wait(68)
        	loadstring(game:HttpGet("https://raw.githubusercontent.com/dracular111/03/main/Event-TimeTrial-3"))()
			end)
        end
    else
        warn("⛔ Không phải event được hỗ trợ — không set gì.")
    end
end)

